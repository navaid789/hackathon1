# Environment configuration for Physical AI & Humanoid Robotics Textbook

# Development settings
NODE_ENV=development
DEBUG=true

# Docusaurus settings
DOCUSAURUS_BASE_URL=/physical-ai-humanoid-textbook/
DOCUSAURUS_FQDN=your-organization.github.io

# Academic settings
ACADEMIC_READABILITY_TARGET=10-12
ACADEMIC_CITATION_STYLE=apa-7th-edition

# ROS 2 settings (for examples and compatibility notes)
ROS_DISTRO=humble
ROS_VERSION=2
ROS_COMPATIBILITY=ubuntu-22.04

# Hardware requirements (minimum specifications)
HARDWARE_GPU_MINIMUM=RTX_2080
HARDWARE_GPU_RECOMMENDED=RTX_3080
HARDWARE_RAM_MINIMUM=32GB
HARDWARE_RAM_RECOMMENDED=64GB

# Simulation environment settings
SIMULATION_ENVIRONMENT=Gazebo_Garden
ISAAC_SIM_VERSION=2023.1

# Content management
CITATION_CHECK_REQUIRED=true
PLAGIARISM_CHECK_REQUIRED=true
SOURCE_VERIFICATION_REQUIRED=true